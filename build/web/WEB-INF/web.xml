<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ProducerList</servlet-name>
        <servlet-class>web.ProducerList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SouvenirList</servlet-name>
        <servlet-class>web.SouvenirList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProducer</servlet-name>
        <servlet-class>web.AddProducer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSouvenir</servlet-name>
        <servlet-class>web.AddSouvenir</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProducerList</servlet-name>
        <url-pattern>/producer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SouvenirList</servlet-name>
        <url-pattern>/souvenir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProducer</servlet-name>
        <url-pattern>/producer/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSouvenir</servlet-name>
        <url-pattern>/souvenir/add</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
